rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && 
             (request.auth.token.admin == true || 
              request.auth.token.email == 'thecrazedlime@gmail.com');
    }
    
    // Helper function to check if user is authenticated (including anonymous)
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Quiz state - anyone can read, only admins can write
    match /quiz/state {
      allow read: if true;  // Guests need to see active quiz
      allow write: if isAdmin();
    }
    
    // All other quiz documents
    match /quiz/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Messages - guests can create and read their own, admins can read all
    match /messages/{messageId} {
      allow read: if true;  // Everyone can read messages (it's a wedding!)
      allow create: if isAuthenticated() && 
                       request.resource.data.keys().hasAll(['name', 'message', 'createdAt']) &&
                       request.resource.data.name is string &&
                       request.resource.data.message is string &&
                       request.resource.data.name.size() <= 50 &&
                       request.resource.data.message.size() <= 200;
      allow update, delete: if isAdmin();  // Only admin can moderate
    }
    
    // Photos metadata (if you store photo info in Firestore)
    match /photos/{photoId} {
      allow read: if true;  // Everyone can see photos
      allow create: if isAuthenticated();  // Guests can upload
      allow update, delete: if isAdmin();  // Only admin can moderate
    }
    
    // Quiz answers/responses from guests
    match /quiz_responses/{responseId} {
      allow read: if isAdmin();  // Only admin sees results
      allow create: if isAuthenticated();  // Guests can submit answers
      allow update: if false;  // No modifications
      allow delete: if isAdmin();  // Admin can clear responses
    }
    
    // User profiles or other collections
    match /users/{userId} {
      allow read: if isAuthenticated() && request.auth.uid == userId;
      allow write: if isAuthenticated() && request.auth.uid == userId;
    }
  }
}
